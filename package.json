{
  "name": "@decentralized-identity/did-common-typescript",
  "version": "0.1.19",
  "description": "Common TypeScript library for decentralized identity.",
  "scripts": {
    "precommit": "npm run lint",
    "build": "tsc",
    "test": "nyc jasmine-ts --config=./tests/jasmine.json",
    "lint": "tslint --fix --project .",
    "check-lint": "tslint --project ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentralized-identity/did-common-typescript.git"
  },
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "base64url": "^3.0.1",
    "clone": "^2.1.2"
  },
  "devDependencies": {
    "@types/fetch-mock": "^7.3.3",
    "@types/jasmine": "^3.6.2",
    "@types/node": "^14.14.21",
    "fetch-mock": "^9.11.0",
    "husky": "^4.3.8",
    "jasmine": "^3.6.3",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "lib/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  },
  "files": [
    "dist/lib/**/*"
  ]
}
